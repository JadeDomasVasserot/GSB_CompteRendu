{% extends 'base.html.twig' %}

{% block title %}Medicament index{% endblock %}

{% block body %}
    <sommaire></sommaire>
    <h1>Medicament index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomcommercial</th>
                <th>Composition</th>
                <th>Effetsindesirables</th>
                <th>Contreindications</th>
                <th>Prixechantillon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medicament in medicaments %}
            <tr>
                <td>{{ medicament.id }}</td>
                <td>{{ medicament.nomcommercial }}</td>
                <td>{{ medicament.composition }}</td>
                <td>{{ medicament.effetsindesirables }}</td>
                <td>{{ medicament.contreindications }}</td>
                <td>{{ medicament.prixechantillon }}</td>
                <td>
                    <a href="{{ path('app_medicament_show', {'id': medicament.id}) }}">show</a>
                    <a href="{{ path('app_medicament_edit', {'id': medicament.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medicament_new') }}">Create new</a>
{% endblock %}
