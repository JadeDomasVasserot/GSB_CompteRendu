{% extends 'base.html.twig' %}

{% block title %}Visiteur index{% endblock %}

{% block body %}
    <sommaire></sommaire>
    <h1 style="text-align:center">Tableau liste des visiteurs</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Date d'embauche</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for visiteur in visiteurs %}
            <tr>
                <td>{{ visiteur.id }}</td>
                <td>{{ visiteur.nom }}</td>
                <td>{{ visiteur.prenom }}</td>
                <td>{{ visiteur.adresse }}</td>
                <td>{{ visiteur.cp }}</td>
                <td>{{ visiteur.ville }}</td>
                <td>{{ visiteur.dateembauche ? visiteur.dateembauche|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_visiteur_show', {'id': visiteur.id}) }}">show</a>
                    <a href="{{ path('app_visiteur_edit', {'id': visiteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas de visiteur</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_visiteur_new') }}">Nouveau Visiteur</a>
{% endblock %}
